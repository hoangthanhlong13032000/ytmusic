<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.LinearLayout">

    <TextView
        android:id="@+id/txt_suggest"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_rec_radius_sm_ripple_gray"
        android:drawablePadding="@dimen/space_larger"
        android:gravity="center_vertical"
        android:padding="@dimen/space_medium"
        android:textSize="@dimen/text_medium"
        tools:drawableStart="@drawable/ic_search_black_28dp"
        tools:text="test" />

    <ImageButton
        android:id="@+id/btn_end"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/bg_rec_radius_sm_ripple_gray"
        android:padding="@dimen/space_medium"
        tools:src="@drawable/ic_arrow_back_black_24dp" />
</merge>